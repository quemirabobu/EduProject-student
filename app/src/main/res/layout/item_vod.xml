<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_background"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_background"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/vod_image"
            android:layout_width="98dp"
android:layout_gravity="center"
            android:padding="2dp"
            android:layout_height="98dp"
            android:background="@drawable/image_border_background"
            android:src="@drawable/ic_launcher_foreground" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/vod_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_weight="1"
                android:fontFamily="@font/baeminjua"
                android:paddingStart="10dp"
                android:text="VOD Title"

                android:textColor="@color/main"
                android:textSize="19dp" />

            <TextView

                android:id="@+id/vod_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:textSize="15dp"
                android:fontFamily="@font/baeminjua"
                android:paddingStart="10dp"
                android:text="VOD Content"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/vod_writer"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="15dp"
                android:layout_weight="1"
                android:fontFamily="@font/baeminjua"
                android:paddingStart="10dp"

                android:text="VOD Writer"
                android:textColor="@color/black" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>