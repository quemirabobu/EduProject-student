<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/linearLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">


        <Button
            android:id="@+id/btn_fragmentA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:backgroundTint="#DFFFFFFF"
            android:drawableLeft="@drawable/attend_scaled"
            android:textSize="13dp"
            android:fontFamily="@font/baeminjua"
            android:onClick="clickHandler"
            android:text="출석"
            android:textColor="@color/main"

            />

        <Button
            android:id="@+id/btn_fragmentC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:backgroundTint="#DFFFFFFF"
            android:drawableLeft="@drawable/map_scaled"
            android:fontFamily="@font/baeminjua"
            android:textSize="13dp"
            android:onClick="clickHandler"

            android:text="지도"

            android:textColor="@color/main" />

        <Button
            android:id="@+id/btn_fragmentB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:backgroundTint="#DFFFFFFF"
            android:drawableLeft="@drawable/contact_scaled"

            android:fontFamily="@font/baeminjua"
            android:onClick="clickHandler"
            android:text="기사"
            android:textColor="@color/main"
            android:textSize="13dp"

            />
        <Button
            android:id="@+id/btn_fragmentD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:backgroundTint="#DFFFFFFF"
            android:drawableLeft="@drawable/class_scaled"

            android:fontFamily="@font/baeminjua"
            android:onClick="clickHandler"
            android:text="수업"
            android:textColor="@color/main"
            android:textSize="13dp"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>